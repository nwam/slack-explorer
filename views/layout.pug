doctype html
html(style='width: 100%; height: 100%')
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/vis.min.css')
  body(style='width: 100%; height: 100%')
    div(id='content' style='width: 100%; height: 100%')
      block title
        h1(id="title")
          a(href="/")=title
      block content

    block scripts
      script(type='text/javascript' src='https://d3js.org/d3.v3.min.js')
      script(type='text/javascript' src='https://cdn.rawgit.com/jasondavies/d3-cloud/master/build/d3.layout.cloud.js')
      script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.bundle.min.js')
      script(type='text/javascript' src='../js/vis.min.js')
      script(type='text/javascript' src='http://code.jquery.com/jquery-latest.min.js')

      script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js')
      script(type='text/javascript' src='../js/socket.js')